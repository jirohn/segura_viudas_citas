{# gestion-citas.html.twig #}
<div class="date-picker-wrapper">
  <label for="date-picker form-item__label visually-hidden">{{ 'Seleccionar fecha'|t }}:</label><br>
  <input class="form-date form-element form-element--type-date form-element--api-date" type="date" id="date-picker">
  {# creamos un checkbox con la id 'check-all' #}
  <input type="checkbox" style="margin-left: 1em;" class="form-checkbox form-boolean form-boolean--type-checkbox" id="check-all">
  {# un input select para elegir acciones en los rows #}
   <select class="form-select form-element form-element--type-select" id="select-action">
    <option value="0">{{ 'Selección por lotes'|t }}</option>
    <option value="all">{{ 'Todas'|t }}</option>
    <option value="empty">{{ 'Citas vacías'|t }}</option>
    <option value="reserved">{{ 'Citas reservadas'|t }}</option>
    <option value="blocked">{{ 'Citas bloqueadas'|t }}</option>
    <option value="deselect">{{ 'Deseleccionar todo'|t }}</option>
  </select>
  <div id="action-buttons-container" class="hidden panel gin-layer-wrapper">
  <button id="delete-button" class="action-link action-link--danger action-link--icon-delete" style="margin-left: 0;border: none;"><img style="width: 1.5em;" src="/modules/nateevo/segura_viudas_citas/images/deleteicon.svg" alt="delete icon" /></button>
  <button id="block-button" class="action-link action-link--warning action-link--icon-block" style="margin-left: 0;border: none;"><img style="width: 1.5em; transform: rotate(-90deg);" src="/modules/nateevo/segura_viudas_citas/images/lockicon.svg" alt="block icon" /></button>
  <button id="unblock-button" class="action-link action-link--success action-link--icon-reserve" style="margin-left: 0;border: none;"><img style="width: 1.5em;" src="/modules/nateevo/segura_viudas_citas/images/lockicon.svg" alt="unblock icon" /></button>
  </div>
</div>


<br><br>

<div class="view-content gin-layer-wrapper gestion-citas-wrapper">
  <div class="gin-table-scroll-wrapper">
    <table class="views-table views-view-table cols-5 responsive-enabled sticky-enabled">
      <thead class="sticky-header">
        <tr>
          {# añadimos el campo select #}
          <th>{{ 'Seleccionar'|t }}</th>
          <th>{{ 'Hora'|t }}</th>
          <th>{{ 'Solicitante'|t }}</th>
          <th>{{ 'Tipo de cita'|t }}</th>
          <th>{{ 'Comentario'|t }}</th>
          <th>{{ 'Acciones' |t }}</th>
        </tr>
      </thead>
      <tbody>

      </tbody>
    </table>
    {# creamos un boton que ocupe todo el ancho de la pagina, para añadir franjas horarias #}
    <button style="width:100%;" class="button button--primary js-form-submit form-submit" id="add-time-slot">{{ 'Añadir franja horaria'|t }}</button>
  </div>
</div>
