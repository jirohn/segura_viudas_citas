<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Citas Form</title>
</head>
 <script>
 (function($) {
(function($) {
  $(document).ready(function() {
    var dateField = $('#edit-date-0-value-date');
    var datePickerDiv = $('<div>').insertAfter(dateField);

    datePickerDiv.datepicker({
      dateFormat: 'yy-mm-dd',
      onSelect: function(dateText) {
        dateField.val(dateText);
      }
    });

    // Muestra el calendario al cargar la p√°gina.
    datePickerDiv.datepicker('show');
  });
})(jQuery);

</script>

<style>
  #edit-date-0-value-date {
    display: none;
  }
</style>

<body>
<form{{ form_attributes }}>
<div class="form-date">
  {{ form.date }}
</div>
<div class="form-time">
  {{ form.time }}
</div>
<div class="form-comment">
  {{ form.comment }}
</div>
  {{ form.actions.submit }}

</form>

</body>
</html>
